extends header.pug
block body
	div(class='jumbotron col-md-6 d-flex align-items-center text-center')
		div
			script(src='https://gist.github.com/iamnapo/0bb9e3fb7b404e1ec4503c3016efc15b.js?file=cbm-same.js')
	script.
		const socket = io.connect('/4');
		socket.emit('clock4');
		socket.on('data4', (data) => {
			const roS = (360 / 60) * data.seconds;
			const roM = (360 / 60) * data.minutes;
			const roH = (360 / 12) * ((data.hours % 12) + (data.minutes / 60));
			sec.style.transform = 'rotate(' + roS + 'deg)';
			min.style.transform = 'rotate(' + roM + 'deg)';
			hour.style.transform = 'rotate(' + roH + 'deg)';
		});
